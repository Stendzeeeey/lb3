#include "pt4.h"
using namespace std;

void Solve()
{
    Task("Series13");
        int i = 0, r = 1;
        int sum = 0;
        while (r != 0) {
            i++;
            pt << i << r;
            if ((r > 0) && (r % 2 == 0))
                sum += r;
        }
        pt << "sum = " << sum;
        if (sum == 0)
            pt << 0;
    }
